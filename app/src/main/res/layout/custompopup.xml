<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="800dp"
    android:layout_height="500dp"
    android:orientation="vertical"
    android:background="@drawable/popupbackground"
    android:padding="20dp"
    android:layout_gravity="center">

    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/closeTextView"
        android:textColor="@color/white"
        android:text="X"
        android:textStyle="bold"
        android:layout_gravity="end"
        android:gravity="center"
        android:background="@drawable/circlebackground"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="100dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:gravity="center_horizontal"
                android:text="First two letters of your surname"
                />

            <EditText
                android:id="@+id/questiona"
                android:layout_width="400dp"
                android:layout_height="60dp"
                android:maxLength="2"
                android:digits="abcdefghijklmnopqrstuvwxyz"
                android:layout_marginTop="10dp"
                android:background="@drawable/customborder"
                android:hint="Two characters"
                android:textColor="@color/white"
                android:inputType="textPersonName"
                android:textAlignment="center"
                android:textStyle="bold" />

        </LinearLayout>





    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="vertical">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Your birthyear"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/questionb"
                android:layout_width="400dp"
                android:layout_height="60dp"
                android:maxLength="4"
                android:layout_marginTop="10dp"
                android:background="@drawable/customborder"
                android:hint="Full year, e.g. 1992 instead of 92"
                android:inputType="number"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="vertical">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Last letter of your birth town"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/questionc"
                android:layout_width="400dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/customborder"
                android:hint="One character"
                android:inputType="text"
                android:digits="abcdefghijklmnopqrstuvwxyz"
                android:maxLength="1"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>




    <Button
        android:id="@+id/popupSubmit"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/rectbutton"
        android:enabled="true"
        android:text="GO"
        android:textColor="@color/white" />

</LinearLayout>