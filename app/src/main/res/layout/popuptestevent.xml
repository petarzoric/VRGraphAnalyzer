<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="800dp"
    android:layout_height="600dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    android:padding="20dp"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="0.1"
        android:gravity="right"
        android:layout_height="0dp">
        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/closeEventButton"
            android:textColor="@color/white"
            android:text="X"
            android:textStyle="bold"
            android:layout_gravity="end"
            android:gravity="center"
            android:background="@drawable/circlebackground"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="0.2"
        android:layout_marginBottom="5dp"
        android:background="@drawable/customborder"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="0dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"

            android:text="Enter a fitting name for your event."
            android:textColor="@color/white"
            android:textSize="22dp" />

        <EditText
            android:layout_width="400dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"

            android:hint="Start typing..."
            android:inputType="textPersonName"
            android:id="@+id/eventNameText"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/customborder"
        android:layout_weight="0.6"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Set the time for your event:"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="@color/colorPrimaryDark"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="right"
                android:layout_gravity="end"
                android:layout_weight="0.5">

                <TextView
                    android:id="@+id/minutesPickerText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:text="minutes"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold" />


                <NumberPicker
                    android:id="@+id/minutesPickerEvent"
                    android:layout_width="wrap_content"
                    android:solidColor="@color/white"
                    android:layout_height="wrap_content"

                    android:layout_alignParentEnd="true"
                    android:layout_marginHorizontal="10dp"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_gravity="left"

                android:layout_height="match_parent"
                android:layout_weight="0.5">

                <NumberPicker
                    android:id="@+id/secondsPickerEvent"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="wrap_content"
                    android:solidColor="@color/white"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:id="@+id/secondsPickerText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"

                    android:text="seconds"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>




    </LinearLayout>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="0.2"
        android:gravity="center"
        android:layout_height="0dp">
        <Button
            android:id="@+id/submitButton"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:autoSizeTextType="uniform"
            android:background="@drawable/rectbutton"
            android:enabled="true"
            android:text="ADD"
            android:textColor="@color/white" />

    </LinearLayout>



</LinearLayout>